<% layout("/layouts/boilerplate.ejs") %>
<body>
    <h2>Listing Details</h2>
    <ul>
        <li><%=listing.title %></li>
        <li><%=listing.description %></li>
        <li><img src="<%=listing.image %>" alt="image not found" style="height: 200px; width: 300px;"></li>
        <li>&#8377;<%=listing.price.toLocaleString("en-IN") %></li><!--toLocaleString converts the number into string with commas as per the mentioned locality-->
        <li><%=listing.location %></li>
        <li><%=listing.country %></li>
    </ul>
    <br>
    <a href="/listings/<%=listing._id %>/edit" class="link_img">Edit this listing</a>
    <br>
    <form action="/listings/<%=listing._id %>?_method=DELETE" method="post">
    <button>Delete</button>
    </form>
</body>